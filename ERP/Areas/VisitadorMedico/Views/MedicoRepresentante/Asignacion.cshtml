
@{
    ViewData["Title"] = "Asignacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-md-12">
        <div class="card">
            <div class="card-header">
                <h6><bold> ASIGNAR MÉDICOS A REP. MÉDICO => </bold>  <bold class="text-info font-weight-blod" id="lblnombremedico"></bold></h6>
                <div class="card-toolbar">
                    <button data-toggle="tooltip" data-title="Buscar Rep .Medico" id="btnbuscarrepmedico" type="submit" class="card-toolbar-btn btn btn-sm radius-1 btn-dark btn-brc-tp mx-2px">
                        <i class="fas fa-search w-2 mx-1px"></i>
                    </button>

                </div>
            </div>
            <div class="card-body" >
                <input type="hidden" id="txtidrepmedico" />
                <div class="row justify-content-end">
                    <div class="col-xl-3 col-md-6">
                        <button class="btn btn-success btn-block mb-2" id="btnexportar"><i class=" fas fa-file-excel mr-2"></i>Reporte de médicos</button>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <button class="btn btn-success btn-block  mb-2" id="btnsubircuotas" style="display:none"><i class=" fas fa-file-excel mr-2"></i>Subir cuotas</button>
                    </div>
                    <div class="col-xl-6 col-md-12">
                        <input type="text" id="txtfiltromedico" placeholder="Ingresar Nombres o colegiatura" class="form-control text-center" />
                    </div>
                    <div class="col-xl-12 table-responsive mt-2" id="contenedor" style="min-height:200px" >
                        <table class="table" id="tbmedicos">
                           <thead></thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Administrador/Views/Empleado/modal/_modalbuscarempleadoxcargo.cshtml" />
