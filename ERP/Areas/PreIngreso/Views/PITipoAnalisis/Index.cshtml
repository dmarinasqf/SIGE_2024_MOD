@model IEnumerable<ENTIDADES.preingreso.PITipoAnalisis>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header bg-success text-center ">
                <div class="row">
                    <div class="col-lg-10">
                        <h6 class="color-blanco">TIPOS DE ANÁLISIS</h6>

                    </div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalregistro">
                            REGISTRAR
                        </button>

                    </div>
                </div>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-responsive-lg table-sm table-hover table-striped" width="100%" id="tbllista">
                            <thead class="thead-dark">
                                <tr>
                                    <th style="width:15%">ID</th>
                                    <th style="width:50%"> DESCRIPCION</th>
                                    <th style="width:20%">ESTADO</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.idtipoanalisis)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.estado)
                                        </td>
                                        <td>
                                            @if (item.estado == "HABILITADO")
                                            {
                                                <div class="btn-group btn-group-sm">
                                                    <a class="btn btn-sm btn-outline-warning waves-effect btn-pasar font-10"><i class="fa fa-edit"></i></a>
                                                    <button class="btn btn-sm btn-outline-danger waves-effect  font-10" onclick="mensajeeliminar(@item.idtipoanalisis)"><i class="fa fa-lock"></i></button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-sm btn-outline-success waves-effect  font-10" onclick="habilitar(@item.idtipoanalisis)"><i class="fa fa-lock"></i></button>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="modalregistro" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm-2  modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <h5 class="modal-title" id="staticBackdropLabel">REGISTRO DE TIPO DE ANÁLISIS</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <div class="card">
                    <div class="body">

                        <form method="post" autocomplete="off" id="form-registro">
                            <input type="hidden" name="idtipoanalisis" value="" id="txtcodigo" />
                            <input type="hidden" value="nuevo" id="txtoperacion" disabled />
                            <label>DESCRIPCIÓN</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" id="txtdescripcion" class="form-control mayusculas" name="descripcion" required>
                                </div>
                            </div>

                            <label>ESTADO</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <select class="form-control show-tick" id="cmbestado" name="estado" required>
                                        <option value="HABILITADO" selected>HABILITADO</option>
                                        <option value="DESHABILITADO">DESHABILITADO</option>
                                    </select>
                                </div>
                            </div>
                            <button class="btn btn-success btn-block" id="btn-guardar" type="submit">GUARDAR DATOS</button>
                            <button class="btn btn-info btn-block " onclick="limpiar()" type="reset">LIMPIAR</button>
                        </form>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
<script src="~/js/areas/preingreso/tipoanalisis/tipoanalisis.js"></script>