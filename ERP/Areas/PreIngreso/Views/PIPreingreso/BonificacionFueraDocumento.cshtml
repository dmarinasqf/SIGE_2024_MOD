                            <div class="form-group">
                                <label>EMPRESA</label>
                                <input type="text" id="txtempresa" class="form-control form-control-sm" readonly>

                            </div>
                        </div>
                        <div class="col-xl-4 col-sm-12">
                            <div class="form-group">
