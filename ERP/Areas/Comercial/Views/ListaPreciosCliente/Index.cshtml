
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-xl-4 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label>CLIENTE</label>
                            <select class="form-control form-control-sm" id="cmbcliente"> </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-sm btn-success btn-block" id="btncrearlista">CREAR LISTA DE CLIENTE</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-sm-12">
                <input type="text" class="form-control form-control-sm" id="txtfiltro" placeholder="Ingrese nombre cliente o documento" />
                <div class="table-responsive mt-2">

                    <table class="table table-bordered" width="100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>CLIENTE</th>
                                <th>ESTADO</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbodyprecios"></tbody>
                    </table>
                </div>
                <div id="paginacion">

                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Comercial/Views/ListaPreciosCliente/modal/_modalsubirexcel.cshtml"/>
<partial name="~/Areas/Comercial/Views/ListaPreciosCliente/modal/_modallistarprecios.cshtml" />
