<!-- Modal //EARTCOD1008// -->
<div class="modal fade" id="modalDescuentoCliente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modal_content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">MODIFICAR DESCUENTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal_body">
                <div id="notificacion" class="modal-notificacion"></div>

                <form id="form_reasignar_resp_caja">

                    <div class="row">
                        <div class="col-xl-12 col-sm-12 py-0 my-0">
                            <div class="form-group ">
                                <input type="hidden" id="mMCD_txtiddescuentocliente" name="iddescuentocliente" />
                                <label id="mMCD_lblnombre">NOMBRE CLIENTE</label>
                                <input id="mMCD_txtnombre" type="text" class="form-control form-control-sm" required name="nombre" readonly>
                            </div>
                        </div>

                        <div class="col-xl-4 col-sm-4 py-0 my-0">
                            <div class="form-group">
                                <label>DESCUENTO</label>
                                <input id="mMCD_txtdescuentocanal" type="text" class="form-control form-control-sm" required name="descuentocanal" maxlength="2" pattern="[0-9]+$">
                            </div>
                        </div>

                        <div class="col-xl-4 col-sm-4 py-0 my-0">
                            <div class="form-group">
                                <label>FECHA INICIO</label>
                                <input id="mMCD_txtfechainicio" type="text" class="form-control form-control-sm date_fecha" required name="date_fecha" readonly>
                            </div>
                        </div>

                        <div class="col-xl-4 col-sm-4 py-0 my-0">
                            <div class="form-group">
                                <label>FECHA TERMINO</label>
                                <input id="mMCD_txtfechatermino" type="text" class="form-control form-control-sm date_fecha" required name="date_fecha" readonly>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCerrar" type="button" class="btn btn-danger" data-dismiss="modal">CERRRAR</button>
                <button id="mMCDbtnEditar" type="button" class="btn btn-success">GUARDAR CAMBIOS</button>
            </div>
        </div>
    </div>
</div>
