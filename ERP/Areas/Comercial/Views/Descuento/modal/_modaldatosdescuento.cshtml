
<div class="modal fade" id="modaldatosdescuento" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog   modal-dialog-scrollable modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <label class="modal-title" id="staticBackdropLabel">Datos de registro</label>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card" onpaste="return false">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-12 col-md-12">
                                <div class="row">
                                    <input type="hidden" id="MDDtxtiddescuento"  />
                                    <div class="col-xl-4">
                                        <div class="form-group">
                                            <label>Fecha inicio</label>
                                            <input type="datetime-local"  id="MDDtxtfechainicio" class="form-control form-control-sm" />
                                        </div>
                                    </div>
                                    <div class="col-xl-4">
                                        <div class="form-group">
                                            <label>Fecha fin</label>
                                            <input type="datetime-local"  id="MDDtxtfechafin"class="form-control form-control-sm"  />
                                        </div>
                                    </div>
                                    <div class="col-xl-4">
                                        <div class="form-group">
                                            <label>Estado</label>
                                           <select class="form-control form-control-sm" id="MDDcmbestado">
                                               <option value="HABILITADO">HABILITADO</option>
                                               <option value="DESHABILITADO">DESHABILITADO</option>
                                           </select>
                                        </div>
                                    </div>
                                    <div class="col-xl-8">
                                        <div class="form-group">
                                            <label>Descripción</label>
                                            <textarea class="form-control" id="MDDtxtdescripcion"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-xl-4 mt-3 text-center">
                                        <button class="btn btn-success" id="MDDbtnguardar"><i class="fas fa-save ml-2 mr-2"></i> Guardar</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-12 col-md-12 contenedor-sticky-400" >
                                <table class="table table-sm table-bordered" width="100%" id="MDDtblproductos">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th style="width:10%" class="header-sticky">Cod</th>
                                            <th style="width:30%" class="header-sticky">Producto</th>
                                            <th style="width:20%" class="header-sticky">Laboratorio</th>
                                            <th style="width:5%" class="header-sticky">PVf</th>
                                            <th style="width:45%" class="header-sticky">
                                                <input type="number" step="any" placeholder="% QF" id="MDDtxtdesqf"/>
                                                <input type="number" step="any" placeholder="% Proveedor" id="MDDtxtdesproveedor" />
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="MDDtbodyproductos" ></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

