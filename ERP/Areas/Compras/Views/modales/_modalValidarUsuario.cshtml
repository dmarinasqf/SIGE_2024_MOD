
<div class="modal fade" data-backdrop="static" id="modalvalidarusuario" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm-1">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <label class="modal-title" id="exampleModalLabel">VALIDAR CREDENCIALES</label>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" autocomplete="off" id="form-validarusuario" >
                    @*<div col-12 style="margin-top:15px;margin-left:15px;margin-right:15px;margin-bottom:15px">*@
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" id="txtiduser" />
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>USUARIO</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input style="margin-right:5px" type="text" name="usuario" class="form-control form-control-sm" id="txtusuario" placeholder=" USUARIO" required>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>CONTRASEÑA</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="password" name="clave" class="form-control form-control-sm" id="txtclave" placeholder=" CONTRASEÑA" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-block btn-success" id="btnguardar" submit @*onclick="verificarusuario()"*@>ACEPTAR</button>
                        </div>
                    </div>
                    
                    @*</div>*@

                </form>
            </div>
            <div class="modal-footer">

            </div>
         
        </div>
    </div>
</div>
