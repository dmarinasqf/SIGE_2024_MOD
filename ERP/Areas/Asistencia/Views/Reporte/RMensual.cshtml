@{
    ViewData["Title"] = "R. Mensual de asistencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-success main-card card">


    <div class="card-body card-body" style="font-size:11px">
        <div class="row">
            <div class="col-xl-12">
                <h3 class="text-center">REPORTE MENSUAL DE ASISTENCIAS</h3>
            </div>
        </div>
        <hr />
        <div class="row justify-content-center" id="cardacciones">
            <div class="col-lg-4 col-md-6 ">

                <label>RANGO DE FECHA</label>
                <input type="text" class="form-control form-control-sm" id="txtfecharango" autocomplete="off" />
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <label>SUCURSAL</label>
                <select class="custom-select" id="cmbsucursal" style="width:285px" tipo="select">
                    <option value="" selected>[SELECCIONE]</option>
                </select>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <div class="input-group mb-1 mt-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-control-sm" style="height:30px;width:120px">EMPLEADO</span>
                    </div>
                    <input type="hidden" id="txtnumdocumentoempleado" />
                    <input type="text" class="form-control form-control-sm" id="txtnombresempleado" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" id="btnbuscarempleado"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                <div class="btn-group  text-center mt-4">
                    <button class="btn btn-info " id="btnConsultar" onclick="getReporteGeneral()">CONSULTAR</button>
                    <button class="btn btn-success " id="btnExportar">EXPORTAR</button>
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    table.dataTable.dataTable_width_auto {
        width: auto;
    }
</style>
<div class="card card-success main-card card mt-2" id="cardreport">
    <div class="card-body card-body text-center">

        <div class="row">
            <div class="col-xl-12 col-sm-12">
                <div class=" table-responsive" id="tabla">
                    <table class="table table-responsive-sm  table-sm table-striped" id="tblReportes">
                        <thead class="thead-dark" style="font-size:10px">
                        </thead>
                        <tbody style="font-size:10px"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*<partial name="~/Areas/Administrador/Views/Empleado/modal/_modalempleados.cshtml" />*@

@* incio modal *@

<div class="modal fade" id="modalempleados" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg  modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue">
                <label class="modal-title" id="staticBackdropLabel">BUSCAR EMPLEADOS</label>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body ">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-6 col-sm-6">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Sucursal</span>
                                    </div>
                                    <select class="form-control" id="cmbMEsucursal"></select>
                                </div>
                            </div>
                            <div class="col-xl-6 col-sm-6">
                                <input type="text" class="form-control" id="txtMEempleado" placeholder="Nombres y apellidos">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12 table-responsive contenedor-sticky-500">
                                <table class="table table-sm table-bordered font-10" id="tblMEtabla" width="100%">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th style="width:15%" class="header-sticky">Documento</th>
                                            <th style="width:40%" class="header-sticky">Empleado</th>
                                            <th style="width:15%" class="header-sticky">Sucursal</th>
                                            <th style="width:20%" class="header-sticky">Empresa</th>
                                            <th class="header-sticky"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblMEtbody"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>


<script src="~/js/areas/administrador/empleados/modal/modalempleados.js"></script>
@* fin de modal *@



<script src="~/js/areas/asistencia/reporte/rMensual.js"></script>