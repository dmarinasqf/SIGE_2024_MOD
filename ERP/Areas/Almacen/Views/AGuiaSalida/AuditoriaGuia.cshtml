                                                </select>
                                            </div>
                                        </div>
                                    </div>*@
                                <div class="col-xl-2 col-xs-6">
                                    <label>SUCURSAL DESTINO </label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <select class="form-control" id="cmbsucursaldestino" name="idsucursaldestino">
