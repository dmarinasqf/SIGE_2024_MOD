    </ul>
    <div class="tab-content">       
        <div class="tab-pane fade show active" id="nav-maestro" role="tabpanel">
            <partial name="complemento/_comformproductos" />
        </div>
        <div class="tab-pane fade" id="nav-generico" role="tabpanel">
            <partial name="complemento/_comgenericoaccionfarma" />
        </div>
        <div class="tab-pane fade" id="nav-regsanitario" role="tabpanel">
            <partial name="complemento/_comregistrosanitario" />
        </div>
        <div class="tab-pane fade" id="nav-listaprecios" role="tabpanel">
            <partial name="complemento/_comlistaprecios" />
