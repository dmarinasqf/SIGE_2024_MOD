
@{
    ViewData["Title"] = "CargarStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-xl-8 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h6>CARGAR STOCK DE FM</h6>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label>SUCURSAL</label>
                            <select id="cmbsucursal" class="form-control form-control-sm">
                            </select>
                        </div>
                        <div class="form-group">
                            <label>ALMACEN</label>
                            <select class="form-control form-control-sm" id="cmbalmacen"></select>
                        </div>
                        <div class="form-group">
                            <label>CANTIDAD STOCK</label>
                            <input type="number" class="form-control form-control-sm" id="txtcantidad" min="0" />

                        </div>
                        <div class="form-group mt-5">
                            <input type="hidden" id="txttipo"  />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="mt-3 card bcard bgc-transparent shadow-none">
                            <div class="card-body tabs-left p-0">
                                <ul class="nav nav-tabs align-self-start" role="tablist">
                                    <li class="nav-item brc-success shadow-sm">
                                        <a class="nav-link text-left py-3 active" id="home14-tab-btn" data-toggle="tab" href="#home14" role="tab" aria-controls="home14" aria-selected="false">
                                            TODO FM
                                        </a>
                                    </li>

                                    <li class="nav-item brc-success shadow-sm">
                                        <a class="nav-link text-nowrap py-3" id="profile14-tab-btn" data-toggle="tab" href="#profile14" role="tab" aria-controls="profile14" aria-selected="false">
                                            POR FM
                                        </a>
                                    </li>

                                    <li class="nav-item  brc-success  shadow-sm">
                                        <a class="nav-link text-nowrap py-3 " id="more14-tab-btn" data-toggle="tab" href="#more14" role="tab" aria-controls="more14" aria-selected="true">
                                            POR LABORATORIO
                                        </a>
                                    </li>
                                </ul>

                                <div class="tab-content p-35 border-1 brc-grey-l1 shadow-sm bgc-white ">
                                    <div class="tab-pane fade text-95 active show" id="home14" role="tabpanel">
                                        <div class="row justify-content-center">
                                            <div class="col-xl-8">
                                                <span class="text-info">Nota: Se actualizará el stock de todas las formulas magistrales del local escogido</span>
                                            </div>
                                            <div class="col-xl-8">
                                                <button class="btn btn-success btn-block mt-4" id="btnguardartodo">CARGAR STOCK</button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane fade text-95" id="profile14" role="tabpanel">
                                        <div class="row justify-content-center">
                                            <div class="col-xl-10">
                                                <span class="text-info">Nota: Se actualizará el stock de la formula seleccionada</span>
                                            </div>
                                            <div class="col-xl-10">
                                                <div class="form-group ">
                                                    <label>FORMULA</label>
                                                    <select id="cmbformula" class="form-control"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Stock actual</label>
                                                    <input type="text" class="form-control text-center font-weight-bold font-16" id="txtstockactual" disabled />
                                                </div>
                                                <div class="form-group mt-2">
                                                    <button class="btn btn-success btn-block" id="btncargarxformula">CARGAR STOCK</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane fade text-95 " id="more14" role="tabpanel">
                                        <div class="row justify-content-center">
                                            <div class="col-xl-8">
                                                <span class="text-info">Nota: Se actualizará el stock de todas las formulas magistrales que pertenecen al laboratorio escogido</span>
                                            </div>
                                            <div class="col-xl-8">
                                                <div class="form-group">
                                                    <label>LABORATORIO</label>
                                                    <select id="cmblaboratorio" class="form-control"></select>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <button class="btn btn-success btn-block" id="btncargarstockxlaboratorio">CARGAR STOCK</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<partial name="~/Views/Modales/_modalValidarUsuario.cshtml" />
<script src="~/js/areas/almacen/stock/cargarstock.js"></script>

