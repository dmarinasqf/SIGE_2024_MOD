
@{
    ViewData["Title"] = "CerarStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/plantilla/modulos/bootstrap-duallistbox/dist/bootstrap-duallistbox.min.css" rel="stylesheet" />
<script src="~/plantilla/modulos/bootstrap-duallistbox/dist/jquery.bootstrap-duallistbox.min.js"></script>

<link href="~/plantilla/modulos/select2/dist/css/select2.css" rel="stylesheet" />
<script src="~/plantilla/modulos/select2/dist/js/select2.min.js"></script>
<div class="row justify-content-center">
    <div class="col-xl-8 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h6>CERAR STOCK</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <select id='cmbsucursales' size="20" name="cmbsucursales[]" multiple='multiple'>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group">
                            <label>TIPO</label>
                            <table class="table table-sm table-bordered" width="100%">
                                <tr>
                                    <td>Todo <input type="radio" name="radtipo" value="todo" id="radtodo" /></td>
                                    <td>Laboratorio <input type="radio" name="radtipo" value="laboratorio" id="radlaboratorio" /></td>
                                </tr>
                            </table>
                        </div>
                        <div class="form-group">
                            <label>Tipo producto</label>
                            <select id="cmbtipoproducto" class="form-control form-control-sm"> </select>
                        </div>
                        <div class="form-group">
                            <label>Laboratorio</label>
                            <select id="cmblaboratorio" multiple disabled> </select>
                        </div>
                        <div class="form-group mt-5">
                            <button class="btn btn-success btn-block" id="btnguardar">CERAR STOCK</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<partial name="~/Views/Modales/_modalValidarUsuario.cshtml" />

<script src="~/js/areas/almacen/stock/cerarstock.js"></script>

