@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header mb-2 pb-2 flex-column flex-sm-row align-items-start align-items-sm-center py-25 px-1">
    <h1 class="page-title text-primary-d2 text-140">
        REGISTRAR PRODUCTO PARECIDO
    </h1>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-12 col-xs-12">
                        <div class="row">
                            <div class="col-xl-2 col-xs-2">
                                <label>CODIGO PRODUCTO</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control form-control-sm" id="txtidproducto" hidden />
                                        <input type="text" class="form-control form-control-sm" id="txtcodigoproducto" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-5 col-xs-5">
                                <label>PRODUCTO</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control form-control-sm" id="txtnombreproducto" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-2 col-xs-2 mt-4">
                                <button class="btn btn-primary btn-block waves-effect" id="btnbuscarproducto" type="button"><i class="fas fa-plus mr-2"></i>BUSCAR</button>
                            </div>
                            <div class="col-xl-2 col-xs-2 mt-4">
                                <button class="btn btn-info btn-block waves-effect" id="btnnuevo" type="button"><i class="fas fa-plus mr-2"></i>NUEVO</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-2">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card bcard h-auto">
                    <div class="row">
                        <div class="col-lg-2 offset-10">
                            <button class="btn btn-primary btn-block waves-effect" id="btnbuscarproductoparecido" type="button"><i class="fas fa-plus mr-2"></i>AGREGAR PRODUCTO PARECIDO</button>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="table-responsive border-t-3 brc-blue-m2 ">
                                <div class="contenedor-sticky-500">
                                    <table class="table table-sm table-hover tabla-sticky table-striped table-bordered " width="100%" id="tblproductoparecido">
                                        <thead class="text-center">
                                            <tr>
                                                <th class="header-sticky" style="width:3%">ID</th>
                                                <th class="header-sticky" style="width:10%">CODIGO</th>
                                                <th class="header-sticky" style="width:7%">TIPO</th>
                                                <th class="header-sticky" style="width:77%">PRODUCTO</th>
                                                <th class="header-sticky" style="width:3%"></th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center font-11">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mb-2">
                <div class="col-xl-3 col-xs-12">
                    <button type="submit" class="btn btn-success waves-effect btn-block" id="btnguardar"><i class="fa fa-save mr-2"></i>GUARDAR</button>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Almacen/Views/AProducto/modal/_modalproductos.cshtml" />

<script src="~/js/controller/almacen/ProductoParecidoController.js"></script>
<script src="~/js/areas/almacen/productoparecido/registrar.js"></script>