
@{
    ViewData["Title"] = "ReporteVentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-card card">
 
    <div class="card-body">
        <div class="row">
            <div class="col-xl-12 col-sm-12">
                <h4 class="text-center">REPORTES DE VENTAS </h4>
            </div>
           
        </div>

        <hr />
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 ">
                <div class="form-group">
                    <label>RANGO DE FECHA</label>
                    <input type="text" class="form-control form-control-sm" id="txtfecharango" autocomplete="off" />
                </div>
            </div>
            
            <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group mt-4">
                    <button class="btn btn-outline-info" id="btnConsultar">CONSULTAR</button>
                    <button class="btn btn-outline-success" id="btnexportar">EXPORTAR</button>
                </div>
               
               
            </div>
        </div>
        <div class="row" style="margin-top:3px">
            <div class="col-lg-12 table-responsive">
                <table class="table table-hover  table-sm table-bordered" width="100%" id="tbllista">
                    <thead class="thead-dark">
                        <tr>
                           
                            <th>FECHA</th>
                            <th>EMPRESA</th>
                            <th>SUCURSAL</th>
                            <th>DOCUMENTO</th>
                            <th>NUM DOC</th>
                            <th>TIPO</th>
                            <th>CLIENTE</th>
                            <th>IMPORTE</th>
                            <th>USUARIO</th>
                          
                        </tr>
                    </thead>
                    <tbody style="font-size:11px">
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script src="~/js/areas/Vinali/reporteventas.js"></script>