
@{
    ViewData["Title"] = "Incentivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/multi-select/css/multi-select.css" rel="stylesheet" />
<script src="~/lib/multi-select/js/jquery.multi-select.js"></script>
<link href="~/plantilla/modulos/bootstrap-duallistbox/dist/bootstrap-duallistbox.min.css" rel="stylesheet" />
<script src="~/plantilla/modulos/bootstrap-duallistbox/dist/jquery.bootstrap-duallistbox.min.js"></script>
<div class="card acard">
    <div class="card-header">

        <div class="card-title text-125 text-primary-d2">
            REPORTE DE INCENTIVOS
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl-6 col-sm-12">
                @if (User.IsInRole("ADMINISTRADOR") || User.IsInRole("ACCESO A TODOS INCENTIVOS"))
             
                {
                    <div class="card">
                        <div class="card-header">
                            SUCURSALES
                        </div>
                        <div class="card-body">
                            <select id='cmbsucursales' size="10" name="cmbsucursales[]" multiple='multiple'>
                            </select>
                        </div>
                    </div>
                }
                else
                {

                }
            </div>
            <div class="col-xl-6 col-sm-12">
                @if (User.IsInRole("ADMINISTRADOR") || User.IsInRole("ACCESO A TODOS INCENTIVOS"))         
                {
                    <div class="card">
                        <div class="card-header">
                            EMPLEADOS
                        </div>
                        <div class="card-body">
                            <select id='cmbempleados' size="10" name="cmbempleados[]" multiple='multiple'>
                            </select>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-sm-12">
                <div class="row justify-content-center">                  
                    <div class="col-xl-6  col-md-6 ">
                        <label>Fecha inicio</label>
                        <input class="form-control form-control-sm" type="date" id="txtfechainicio" />
                    </div>
                    <div class="col-xl-6 col-md-6">
                        <label>Fecha fin</label>
                        <input class="form-control form-control-sm" type="date" id="txtfechafin" />
                    </div>
                    <div class="col-xl-6 col-md-6">
                        <label>TIPO</label>
                        <select class="form-control form-control-sm" id="cmbtipo">
                            <option value="resumen" selected>RESUMEN</option>
                            <option value="detallado">DETALLADO</option>
                        </select>
                    </div>
                  
                </div>
            </div>
            <div class="col-xl-6 col-sm-12">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-6 text-center">
                        <button class="btn btn-dark mt-4 " id="btnconsultar"><i class="fas fa-search ml-2 mr-2"></i> Consultar</button>
                    </div>
                    <div class="col-xl-6 col-md-6 text-center">
                        <button class="btn btn-success mt-4" id="btnexportar"><i class="fas fa-file-excel ml-2 mr-2"></i> Exportar</button>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class=" table-responsive mt-2" id="contenedor">
            <table class="table">
                <tr>
                    <td></td>
                </tr>
            </table>
        </div>
    </div>
</div>
<script src="~/js/areas/ventas/reporte/reporteincentivos.js"></script>
<script src="~/js/controller/ventas/ReporteVentasController.js"></script>
<partial name="~/Areas/Administrador/Views/Empleado/modal/_modalempleados.cshtml" />

