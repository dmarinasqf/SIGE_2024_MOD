
@{
    ViewData["Title"] = "HistorialProformas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-11 col-md-6">
        <div class="page-header mb-2 pb-2 flex-column flex-sm-row align-items-start align-items-sm-center py-25 px-1">
            <h1 class="page-title text-primary-d2 text-140">
                PROFORMAS DE PEDIDOS Y VENTAS
            </h1>
        </div>
    </div>
    <div class="col-xl-1 col-md-6">
        <a class="btn btn-primary" asp-action="Proforma"><i class="fas fa-plus"></i></a>
    </div>

</div>
<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            @if (User.IsInRole("ADMINISTRADOR") || User.IsInRole("ACCESO A TODAS LAS SUCURSALES"))
            {
                <div class="col-xl-3 col-md-12">
                    <div class="form-group">
                        <label>SUCURSAL</label>

                        <select class="form-control" id="txtsucursal" tipo="select"></select>

                    </div>
                </div>
            }
            else
            {
                <input type="hidden" id="txtsucursal" tipo="input" />
            }
            <div class="col-xl-3 col-md-12">
                <div class="form-group">
                    <label>N°  PROFORMA</label>
                    <input type="text" id="txtnumdocumento" class="form-control" />
                </div>
            </div>
            <div class="col-xl-3 col-md-12">
                <div class="form-group">
                    <label>FECHA DE REGISTRO</label>
                    <input type="date" id="txtfecharegistro" class="form-control" />
                </div>
            </div>
            <div class="col-xl-1 mt-4">
                <button type="button" class="btn btn-lg btn-secondary" id="btnbusqueda"><i class="fas fa-search"></i></button>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-xl-12 col-sm-12">
                <div class="card bcard h-auto">
                    <div class="border-t-3 brc-blue-m2  table-responsive">
                        <table class="table table-sm table-bordered" id="tbllista" width="100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th class=""></th>
                                    <th class="">NUMERO</th>
                                    <th class="">SUCURSAL</th>
                                    <th class="">FECHA</th>
                                    <th class="">CLIENTE</th>
                                    <th class="">IMPORTE</th>
                                    <th class="">ESTADO</th>
                                    <th class="">USUARIO</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Modales/Imprimir.cshtml" />
<script src="~/js/controller/ventas/ProformaController.js"></script>
<script src="~/js/areas/ventas/proforma/historialproforma.js"></script>
