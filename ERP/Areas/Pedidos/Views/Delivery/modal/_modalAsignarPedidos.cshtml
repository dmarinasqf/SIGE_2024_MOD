<div class="modal fade" id="modalAsignarPedido" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content ">
            <div class="modal-header">
                <label class="modal-title" id="exampleModalLabel">ASIGNAR PEDIDOS A </label>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" autocomplete="off" id="MAP_form-registro">
                <div class="modal-body">
                    <input type="hidden" id="MAP_txtcodigo" />
                    <div class="card">
                        <div class="card-body">
                            <div class="row">


                                <div class="col-12">
                                    <div class="form-group ">
                                        <label>ASIGNADOS POR:</label>
                                        <input type="hidden" id="MAP_txtidempleadoasigna" name="idpersonalasigna" required />
                                        <input id="MAP_txtempleadoasigna" type="text" class="form-control" disabled>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label>FECHA ASIGNA</label>
                                        <input id="MAP_txtfechaasigna" type="text" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" disabled>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12">
                                    <div class="form-group ">
                                        <label>MOTORIZADO </label>
                                        <select class="form-control" id="MAP_cmbmotorizado" name="emp_codigo" required>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label>Nº PEDIDOS</label>
                                        <input id="MAP_txtnumeropedidos" type="number" class="form-control" disabled>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group ">
                                        <label>ESTADO ENTREGA PEDIDO</label>
                                        <select class="form-control" id="MAP_cmbestadoentrega" name="estadoentrega" readonly required>
                                            <option value="" selected>[SELECCIONE]</option>
                                            <option value="ASIGNADO">ASIGNADO</option>
                                            <option value="EN RUTA">EN RUTA</option>
                                            <option value="ENTREGADO">ENTREGADO</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    <button type="submit" class="btn btn-primary btn-block" id="btnGuardar">Guardar</button>
                                </div>
                                <div class="col-xl-6">
                                    <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
                <div class="modal-footer">

                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/areas/pedidos/delivery/modal/modalasignarpedidos.js"></script>