
<div class="modal fade" id="modaleditarpedido" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-inline">
                    <label class="mr-4">EDITAR PEDIDO &nbsp&nbsp<span class="font-weight-bold ml-20 mr-2" id="MEDPlblnumpedido"></span></label>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formeditarpedido">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-6 col-sm-12">
                                    <div class="form-group">
                                        <label>CLIENTE</label>
                                        <select id="MEDPcmbbuscarcliente"></select>
                                        <input type="hidden" id="MEDPtxtidcliente" />
                                        <label id="MEDPlbldatoscliente" class="form-control"></label>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-12">
                                    <div class="form-group">
                                        <label>PACIENTE</label>
                                        <select id="MEDPcmbbuscarpaciente"></select>
                                        <input type="hidden" id="MEDPtxtidpaciente" />
                                        <label id="MEDPlbldatospaciente" class="form-control"></label>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-12">
                                    <div class="form-group">
                                        <label>MEDICO</label>
                                        <select id="MEDPcmbbuscarmedico"></select>
                                        <input type="hidden" id="MEDPtxtidmedico" />
                                        <label id="MEDPlbldatosmedico" class="form-control"></label>
                                    </div>
                                </div>

                                <!--EARTCOD1005-->
                                <div class="col-xl-6 col-sm-12" id="MEDPdivDelivery">
                                    <div class="form-group ">
                                        <label>DIRECCIÓN DE ENVIO</label>
                                        <input id="MEDPhdnIdDelivery" name="MEDPhdnIdDelivery" type="hidden" value="">
                                        <textarea id="MEDPtxtdireccion" type="text" class="form-control form-control-sm mayusculas" rows="2" name="direccion" required></textarea>
                                    </div>
                                </div>
                                <!---->

                                <div class="col-xl-6 col-sm-12">
                                    <label>SUBIR IMAGEN</label>
                                    <button id="btnimagen" class="btn btn-dark btn-block btn-sm" type="button"><i class="fas fa-upload"></i></button>
                                </div>

                                <div class="col-xl-12 col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label>ORIGEN RECETA</label>
                                        <div class="input-group mb-3">
                                            <input type="hidden" id="txtidorigenreceta" @*asp-for="idorigenreceta"*@>
                                            <input type="text" class="form-control form-control-sm" id="txtorigenreceta" disabled>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button" id="btnbuscarorigenreceta"><i class="fa fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            @*  *@
                            <div class="row mt-3">
                                <div class="col-xl-12">
                                    <table class="table table-sm table-bordered" width="100%">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th>CODIGO</th>
                                                <th style="width:40%">DETALLE</th>
                                                <th style="width:20%">TIPO PEDIDO</th>
                                                <th class="text-right">PRECIO</th>
                                                <th class="text-right">UNIDADES</th>
                                                <th class="text-right">SUBTOTAL</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="MEDPtbodydetalle"></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-xl-6 text-center">
                                    <button class="btn btn-success btn-sm" type="submit" id="MEDPbtnguardardedicion">GUARDAR</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>


<script src="~/js/areas/pedidos/pedidos/modal/modaleditarpedido.js"></script>
