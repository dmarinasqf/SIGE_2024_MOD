@model Erp.Entidades.Contabilidad.ResponsableSede
<script src="~/js/areas/contabilidad/AsignarCajaChica/funciones_interaccion.js"></script>
<style>
    .holder {
        height: 122px;
        width: 224px;
    }

    #imgPreview {
        max-width: 222px;
        max-height: 120px;
        min-width: 222px;
        min-height: 120px;
    }

    input[type="file"] {
        margin-top: 5px;
    }

    .heading {
        font-family: Montserrat;
        font-size: 45px;
        color: green;
    }
</style>

<!-- Modal -->
<div class="modal fade" id="modalReponer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">REPONER CAJA CHICA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="notificacion" class="modal-notificacion"></div>

                <form id="form_reponer_caja" enctype="multipart/form-data">
                    <input type="hidden" name="usuario_op" id="usuario_op" value="@ViewBag.IDEMPLEADO" />
                    <input type="hidden" name="montoReponer" id="montoReponer" asp-for="montoReponer" />
                    <input type="hidden" name="idSucursalResp" id="idSucursalResp" asp-for="idSucursalResp" />
                    <div class="row">

                        <div class="col-xl-6 col-sm-6 px-0 mx-0">
                            <div class="col-xl-12 col-sm-12 py-0 my-0">
                                <div class="form-group">
                                    <label>MONTO A REPONER</label>
                                    <input type="text" name="montoCaja" id="montoCaja" class="form-control form-control-sm montoCaja" />
                                </div>
                            </div>

                            <div class="col-xl-12 col-sm-12 py-0 my-0">
                                <div class="form-group">
                                    <input type="hidden" name="usuario" id="usuario" asp-for="usuario" />
                                    <input type="hidden" name="numeroCuenta" id="numeroCuenta" asp-for="numeroCuenta" />
                                    <input type="hidden" name="entidadBancaria" id="entidadBancaria" asp-for="entidadBancaria" />
                                    <label>RESPONSABLE CAJA</label>
                                    <input type="text" name="txtresponsableCaja" id="txtresponsableCaja" class="form-control form-control-sm responsableCaja" disabled />
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6">
                            <div class="row">
                                <div class="col-xl-12 col-sm-12 mt-3">
                                    <div class="holder card">
                                        <img id="imgPreview" src="" alt=" " class="rounded" />
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="imgFile" lang="es" accept=".jpg,.jpeg,.png,.pdf">
                                        <label class="custom-file-label" for="photo">Adjuntar una imagen</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-12 col-sm-12" id="contenedor_historico">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCerrar" type="button" class="btn btn-danger" data-dismiss="modal">CERRRAR</button>
                <button id="btnHistorial" type="button" class="btn btn-dark" onclick="AsignacionCajaHistoricoListar()">VER HISTORIAL</button>
                <button id="btnReponer" type="button" class="btn btn-success" onclick="CajaAsignacionReponer()">GUARDAR CAMBIOS</button>
            </div>
        </div>
    </div>
</div>