@model Erp.Entidades.Contabilidad.ResponsableSede
<script src="~/js/areas/contabilidad/AsignarCajaChica/funciones_interaccion.js"></script>

<!-- Modal -->
<div class="modal fade" id="modalReasignar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modal_content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">REASIGNAR RESPONSABLE</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal_body">
                <div id="notificacion" class="modal-notificacion"></div>

                <form id="form_reasignar_resp_caja">

                    <div class="row">
                        <div class="col-xl-12 col-sm-12 py-0 my-0" id="contenedor_txtResponsable">
                            <div class="form-group">
                                <label>RESPONSABLE CAJA CHICA (APELLIDOS Y NOMBRES)</label>
                                <input type="hidden" name="usuario_op" id="usuario_op" value="@ViewBag.IDEMPLEADO" />
                                <input type="hidden" name="usuario" id="usuario" asp-for="usuario" class="usuario" />
                                <input type="hidden" name="idSucursalResp" id="idSucursalResp" asp-for="idSucursalResp" class="idSucursalResp" />
                                <input type="hidden" name="responsable_nombre" id="responsable_nombre" class="responsable_nombre" />
                                <input type="text" name="responsableCaja" id="responsableCaja_reasignar" class="form-control form-control-sm responsableCaja" />
                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 py-0 my-0">
                            <div class="form-group">
                                <label>ENT. BANCARIA</label>
                                <input type="text" name="entidadBancaria" id="entidadBancaria" class="form-control form-control-sm entidadBancaria" />
                            </div>
                        </div>

                        <div class="col-xl-6 col-sm-6 py-0 my-0">
                            <div class="form-group">
                                <label>N° CUENTA</label>
                                <input type="text" name="numeroCuenta" id="numeroCuenta" class="form-control form-control-sm numeroCuenta" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCerrar" type="button" class="btn btn-danger" data-dismiss="modal">CERRRAR</button>
                <button id="btnGuardar" type="button" class="btn btn-success" onclick="CajaAsignacionReasignarResp()">GUARDAR CAMBIOS</button>
            </div>
        </div>
    </div>
</div>

